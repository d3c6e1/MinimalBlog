<!DOCTYPE HTML>

<html>
<head>
    @await Html.PartialAsync("MetaTagsPartial")
    @await Html.PartialAsync("CssPartial")
</head>
<body class="is-preload">

    <!-- Wrapper -->
    <div id="wrapper">

        <!-- Header -->
        @await Html.PartialAsync("HeaderPartial")

        <!-- Menu -->
        @await Html.PartialAsync("MenuPartial")

        <!-- Main -->
        <div id="main">

            @RenderBody()

            <!-- Pagination -->
            @await Html.PartialAsync("PaginationPartial")

        </div>

        <!-- Sidebar -->
        <section id="sidebar">

            <!-- Intro -->
            @await Html.PartialAsync("IntroPartial")

            <!-- About -->
            @await Html.PartialAsync("AboutPartial")

            <!-- Footer -->
            @await Html.PartialAsync("FooterPartial")

        </section>

    </div>

    <!-- Scripts -->
    @await Html.PartialAsync("ScriptsPartial")

</body>
</html>